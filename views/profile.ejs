<% include ./partials/header %>
<% include ./partials/navbar %>
<% include ./partials/sidebar %>

<div class= "pusher">
                
                <div class="ui center aligned grid">
                        <h4 class="ui icon header">
                                <i class="user icon"></i>
                                        <div class="content">
                                         Profile Settings
                                        <div class="sub header">You can change your password here</div>
                                        </div>
                        </h4>
                </div>       

        <div class="ui center aligned grid">
                <div class="ten wide tablet seven wide computer column profile_settings" style="display:none">
                        <div class="ui mini form">
                                <form action="/updateprofile?_method=PUT" method="POST">
                                        <div class="field">
                                                <label>Username</label>
                                                <input name="username" type="text" value="<%= currentUser.username %>" disabled>
                                        </div>
                                        <div class="field">
                                                <label>Full Name</label>
                                                <input name="fullName" type="text"  value="<%= currentUser.fullName %>">
                                        </div>
                                        <div class="field">
                                                <label>E-mail</label>
                                                <input name="email" type="text"  value="<%= currentUser.email %>">
                                        </div>
                                        <div class="field">
                                                        <label>Preferred keys</label>
                                                        <div class="ui two column grid">
                                                                <div class="row">
                                                                        <div class="column">
                                                                                <label for="">For Aquila via Putty</label>
                                                                        </div>
                                                                        <div class="column">
                                                                                <label for="">For CMD in Windows</label>
                                                                        </div>
                                                                </div>
                                                                <div class="row">
                                                                        <div class="column">
                                                                                <input value="aquila" name="preffered_keys" type="radio" disabled>
                                                                        </div>
                                                                        <div class="column">
                                                                                <input value="cmd" name="preffered_keys" type="radio" disabled>
                                                                        </div>
                                                                 </div>
                                                                
                                                        </div>
                                                        
                                        </div>
                                        <div class="field">
                                                        <label>Remote web interface</label>
                                                        <div class="ui two column grid">
                                                                <div class="row">
                                                                        <div class="column">
                                                                                <label for="">Open in same window</label>
                                                                        </div>
                                                                        <div class="column">
                                                                                <label for="">Open in new tab</label>
                                                                        </div>
                                                                </div>
                                                                <div class="row">
                                                                        <div class="column">
                                                                                <input value="iframe" name="web_interface" type="radio" disabled>
                                                                        </div>
                                                                        <div class="column">
                                                                                <input value="new_tab" name="web_interface" type="radio" disabled>
                                                                        </div>
                                                                 </div>
                                                                
                                                        </div>
                                                        
                                        </div>
                                        <div class="field">
                                                <label>Current password</label>
                                                <input name="oldPass" type="text">
                                        </div>
                                        <div class="field">
                                                <label>Set new password</label>
                                                <input name="" type="password" id="newPass">
                                        </div>
                                        <div class="field">
                                                <label>Repeat new password</label>
                                                <input name="newPass" type="password" id="newPassCheck" disabled>
                                        </div>
                               
                                        <button class="ui fluid red submit button" id="update_profile" disabled>Save changes</button>
                                </form>        
                        </div>
                </div>        
        </div>       

</div>



<% include ./partials/footer %>