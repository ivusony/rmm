<% include ./partials/header %>
<% include ./partials/navbar %>
<% include ./partials/sidebar %>

<div class= "pusher" style="width: calc(100% - 260px); height: 100%; padding-top: 40px;">

    
        <div class="ui center aligned grid">
                <h4 class="ui icon header">
                        <i class="history icon"></i>
                                <div class="content">
                                 Request history
                                <div class="sub header">Listing requests in descending order by date</div>
                                </div>
                </h4>
        </div>       
  
        <div class="ui center aligned grid">
            <div class=" ">
                    <table class="ui   small stackable  compact  striped   table">
                        <thead>
                        <tr class="center aligned">
                            <th>CPE IP</th>
                            <th>MODEM IP</th>
                            <th>MODEM TYPE</th>
                            <th>DATE AND TIME</th>
                            <th>STATUS</th>
                        </tr>
                        </thead>
                        <tbody>
                    <%requests.forEach(request=>{%>
                        <tr class="center aligned">
                            <td><%=request.CPEIP%></td>
                            <td><%=request.MODEMIP%></td>
                            <td><%=request.MODEM%></td>
                            <td><%=request.TIMESTAMP%></td>
                                <%if(request.isON){%>
                                    <td  class="ison negative">Still open<i class="attention icon"></i></td>
                                <%}else{%>
                                    <td  class="ison positive">Closed</td>
                                <%}%>
                        </tr>
                        <%})%>
                    </table>
            </div>
        </div>    
</div>




<% include ./partials/footer %>