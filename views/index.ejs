<% include ./partials/header %>
<% include ./partials/navbar %>
<% include ./partials/sidebar %>
<div class= "pusher" style="width: calc(100% - 260px); height: 100%; padding-top: 50px;">
    <h4 class="ui horizontal divider header">
        config
    </h4>
    <div class="ui  centered grid" style="margin-top:2%">
        <div class="ui form" style="width: 70%">
            <div class="five fields">
                <div class="field">
                    <input type="text" id="cpeIP" placeholder="CPE IP ADSRESS" required>
                </div>
                <div class="field">
                    <input type="text" id="wCOM" placeholder="WRITE COMMUNITY" required>
                </div>
                <div class="field">
                    <input type="text" id="modemIP" placeholder="MODEM IP ADRESS" required>
                </div>
                <div class="field">
                    <select name="" id="modemType">
                        <option value="select">SELECT MODEM</option>
                        <option value="cisco">Cisco EPC3925</option>
                        <option value="thomson">Thomson THG571</option>
                    </select>
                </div>
                <div class="field" id="request_btn_holder">
                    <button class="ui fluid button" disabled>Send request</button>
                </div>
            </div>
        </div>
    </div>
    <div class="ui  centered grid">
        <div class="ui form" style="min-width: 35%;">
            <div class="two fields">
                <div class="field">
                    <button class="request_btn copy fluid ui red button" data-clipboard-target="#request_result" id="aquilaOnKey" disabled>Copy ON key</button>
                </div>
                <div class="field">
                    <button class="request_btn copy fluid ui red button" data-clipboard-target="#request_result" id="aquilaOffKey" disabled >Copy OFF Key</button>
                </div>
            </div>
        </div>
    </div>
    <textarea id="request_result" style="position:absolute; left: -1500px  "></textarea>
    <h4 class="ui horizontal divider header" style="padding-top:3%">
        <button class="ui tiny button" id="web-interface" disabled>Open device web interface </button>
    </h4>
    <div class="ui grid">
        <div id="frame_holder" style="width: 1100px; min-height: 600px; margin-left: auto; margin-right: auto">
            <iframe id="remote-page" src=""  width="100%" height="100%" align="center" frameborder="0"></iframe>
        </div>
    </div>
</div>
  <% include ./partials/footer %>