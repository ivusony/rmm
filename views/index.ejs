<% include ./partials/header %>
<% include ./partials/navbar %>
<% include ./partials/sidebar %>
<div class= "pusher">
        <div class="ui center aligned grid">
                <h4 class="ui icon header">
                        <i class="linkify icon"></i>
                                <div class="content">
                                 New request
                                <div class="sub header">Make new request to remote device</div>
                                </div>
                </h4>
        </div>       
    <div class="ui  centered grid" id="newrequest">
        <div class="ui form" >
            <div class="five fields">
                <div class="field">
                    <input type="text" id="cpeIP" placeholder="CPE IP ADSRESS" required>
                </div>
                <div class="field">
                    <input type="text" id="wCOM" placeholder="WRITE COMMUNITY" required>
                </div>
                <div class="field">
                    <input type="text" id="modemIP" placeholder="MODEM IP ADRESS" required>
                </div>
                <div class="field">
                    <select name="" id="modemType">
                        <option value="select">SELECT MODEM</option>
                        <option value="cisco">Cisco EPC3925</option>
                        <option value="thomson">Thomson THG571</option>
                    </select>
                </div>
                <div class="field" id="request_btn_holder">
                    <button class="ui fluid button" disabled>Send request</button>
                </div>
            </div>
        </div>
    </div>
    <div class="ui  centered grid">
        <div class="ui form" style="min-width: 35%;">
            <div class="two fields">
                <div class="field">
                    <button class="request_btn copy fluid ui red button" data-clipboard-target="#request_result" id="aquilaOnKey" disabled>Copy ON key</button>
                </div>
                <div class="field">
                    <button class="request_btn copy fluid ui red button" data-clipboard-target="#request_result" id="aquilaOffKey" disabled >Copy OFF Key</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- <h4 class="ui horizontal divider header" style="padding: 3% 15%">
        divider
    </h4> -->
    <div class="ui  centered grid" style="padding-top: 40px;">
            <button class="ui tiny button" id="web-interface" disabled>Open device web interface </button>
    </div>
    
    <div class="ui grid">
        <div id="frame_holder" style="width: 1100px; min-height: 600px; margin-left: auto; margin-right: auto">
            <iframe id="remote-page" src=""  width="100%" height="100%" align="center" frameborder="0"></iframe>
        </div>
    </div>
</div>
<% if(currentUser.firstLogin){ %>
    


<div class="ui basic modal" id="welcome_modal">
        <div class="ui icon header">
            <i class="info  icon"></i>
                Welcome 
                <span id="username"><%= currentUser.fullName %></span>
        </div>
        <hr>
        <div class="content">
            <p style="text-justify:distribute ">This is an experimental mongoDB/NODEJS device management web application partly powered by websockets (Socket.IO). It is still under development so if you face any kind of bug, please be so kind and report it. Thank you</p>
            <p style="text-align:center">Ivan Radulov</p>
        </div>
        <hr>
        <div class="actions">
            <div class="ui red basic cancel inverted button" id="unshowWelcome">
                <i class="remove icon"></i>
                Close
            </div>
        </div>
</div>

<% } %>


  <% include ./partials/footer %>