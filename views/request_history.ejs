<% include ./partials/header %>
<% include ./partials/navbar %>
<% include ./partials/sidebar %>

<div class= "pusher" style="width: calc(100% - 260px); height: 100%; padding-top: 40px;">

    
        <div class="ui center aligned grid">
                <h4 class="ui icon header">
                        <i class="history icon"></i>
                                <div class="content">
                                 Request history
                                <div class="sub header">Listing requests in descending order by date</div>
                                </div>
                </h4>
        </div>       
  

                    <table class="ui six small stackable  compact  striped   table">
                        <thead>
                        <tr>
                            <th>CPE IP</th>
                            <th>MODEM IP</th>
                            <th>MODEM TYPE</th>
                            <th>DATE AND TIME</th>
                            <th>IS OPEN</th>
                        </tr>
                        </thead>
                        <tbody>
                    <%requests.forEach(request=>{%>
                        <tr>
                            <td><%=request.CPEIP%></td>
                            <td><%=request.MODEMIP%></td>
                            <td><%=request.MODEM%></td>
                            <td><%=request.TIMESTAMP%></td>
                            <td  class="ison">
                                <%if(request.isON){%>
                                    NOT CLOSED
                                <%}else{%>
                                    NO
                                <%}%>
                            </td>
                        </tr>
                        <%})%>
                    </table>

</div>




<% include ./partials/footer %>